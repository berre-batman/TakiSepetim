@using deneme.Entity;
@model IEnumerable<urun>
@{
    ViewBag.Title = "_urunliste";
}

<div class="row">
    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card" style="height:600px;">
                <img src="/upload/@urun.Image" alt="@urun.Name" style="height:400px;">

                <div class="card-body">
                    <h4 class="card-title" style="font-size:22px;">
                        <a href="/Home/Urundetay/@urun.Id">@urun.Name</a>
                    </h4>
                    <p class="card-text pt-2 description" style="font-size:17px;">
                        @urun.Description
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                        @urun.Fiyat TL
                    </small>
                    <a href="/Home/Urundetay/@urun.Id" class="btn btn-primary btn-sm" style="float:right;">
                        Ürünü incele
                    </a>
                </div>
            </div>
        </div>
    }
</div>

